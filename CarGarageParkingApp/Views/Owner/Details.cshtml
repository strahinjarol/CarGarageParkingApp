@model CarGarageParkingApp.Models.Owner

@{
	ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}

<div class="owner-look">
	<h1>@Model.FirstName @Model.LastName</h1>
	<h3>Number of Cars: @Model.Vehicles.Count()</h3>

	<ul class="vehicle-solo">
		@foreach (var vehicle in Model.Vehicles)
		{
			<li>Vehicle: @vehicle.LicencePlate</li>
		}
	</ul>
	<a href="@Url.Action("Index", "Owner")">Back to Owners</a>
</div>



<style>
	.owner-look {
		border: 1px solid gray;
		border-radius: 15px;
		margin: 10px;
		padding: 15px;
		background-color: cadetblue;
		color: white;
	}

		.owner-look a {
			color: yellow;
			text-align: center;
			text-decoration: none;
			font-weight: bold;
			text-transform: uppercase;
		}

			.owner-look a:hover {
				color: white;
				text-align: center;
				text-decoration: none;
				font-weight: bold;
				text-transform: lowercase;
			}

	.vehicle-solo {
		text-transform: uppercase;
		text-align: center;
		margin: 10px;
	}

		.vehicle-solo li {
			margin: 10px;
			list-style: none;
			border: 1px solid white;
			border-radius: 25px;
			color: cadetblue;
			background-color: navajowhite;
			max-width: 200px;
		}
</style>
